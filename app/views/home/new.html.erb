
<div class="container">
<h1>Create a review</h1><br>
<%=form_for @link, method: :post, url:'/home' do |f|%>
  <div class="mb-3">
    <%=f.label :title, class:"form-label"%> 
    <%=f.text_field :title, placeholder: 'enter the title', class:"form-control"%>
  </div>
  <div class="mb-3">
    <%=f.label :link, class:"form-label"%> 
    <%=f.text_field :link, placeholder: 'enter link', class:"form-control"%>
  </div>
  <div class="mb-3">
    <%=f.label :review, class:"form-label"%> 
    <%=f.text_area :review, placeholder: 'write the review here', class:"form-control"%>
  </div>
  
  <div style="color: red;">
    <ol>
    <%flash[:errors]&.each do |e|%>
      <li><%=e%></li>
    <%end%>
    </ol>
  </div><br>
  <button type="submit" class="btn btn-primary">Submit</button>
<%end%>
</div>


